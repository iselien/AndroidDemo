<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondFragment">

    <LinearLayout
        android:orientation="vertical"
        android:paddingVertical="5dp"
        android:paddingHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/recycler_view_main_linear_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LinearLayout"/>

        <Button
            android:id="@+id/recycler_veew_main_grid_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GridLayout"/>
        <Button
            android:id="@+id/recycler_view_main_staggered_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="StaggeredGridLayout"/>
        <Button
            android:id="@+id/recycler_view_main_custom_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="custom"/>
        <Button
            android:id="@+id/recycler_view_main_pinned_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="pinned"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textview_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/button_second"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/previous"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_second" />
</androidx.constraintlayout.widget.ConstraintLayout>